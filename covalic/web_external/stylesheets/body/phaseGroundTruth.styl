@import "~nib/index"

.c-ground-truth-page-container
  .c-upload-container
    margin 20px 0 25px
    padding-bottom 14px
    border-bottom 1px solid #eee

    .g-dialog-subtitle
      display none

    .g-drop-zone
      width 100%
      text-align center
      height 60px
      line-height 60px
      box-shadow 0 2px 5px rgba(0, 0, 0, 0.2)
      background-color #5cb897
      border 1px solid #4a8
      padding 0

      &:hover
        background-color #6cc8a7
        background linear-gradient(top, #6cc8a7 50%, #5cb897 100%)

      &:active
        background #6cc8a7
        box-shadow inset 0 3px 5px rgba(0, 0, 0, 0.125)

      &.g-dropzone-show
        background white
        border 2px dashed #bbb
        box-shadow none
        padding 0

  .c-access-container
    margin-top 20px
