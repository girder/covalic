.modal-dialog
  .modal-content
    form#c-phase-edit-form.modal-form(role="form")
      .modal-header
        button.close(data-dismiss="modal", aria-hidden="true", type="button") &times;
        h4.modal-title
          if (phase)
            | Edit phase
          else
            | Create phase
      .modal-body
        .form-group
          label.control-label(for="c-phase-name") Name
          input#c-phase-name.input-sm.form-control(type="text", placeholder="Enter phase name")
        .form-group
          label.control-label(for="c-phase-description") Description (optional)
          textarea#c-phase-description.input-sm.form-control(placeholder="Enter phase description")
        #c-phase-timeframe.form-group
        .checkbox
          label
            input#c-phase-active(type="checkbox")
            |  Active (accepting submissions)
        .checkbox
          label
            input#c-phase-hide-scores(type="checkbox")
            |  Hide scores from participants
        .checkbox
          label
            input#c-phase-training(type="checkbox")
            |  Training phase
        .g-validation-failed-message
      .modal-footer
        a.btn.btn-small.btn-default(data-dismiss="modal") Cancel
        button.c-save-phase.btn.btn-small.btn-primary(type="submit")
          if (phase)
            i.icon-edit
            | Save
          else
            i.icon-plus-squared
            | Create
